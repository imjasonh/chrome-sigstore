{
    "manifest_version": 3,
    "name": "Sigstore close post-auth tabs",
    "description": "Automatically close tabs opened by the Sigstore keyless signing flow.",
    "version": "0.0.1",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "minimum_chrome_version": "102",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://localhost/*"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
